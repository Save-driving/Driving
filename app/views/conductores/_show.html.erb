<%- model_class = Conductor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="responsive">
  <div class="modal-body">
    <div class='row' id='infor'>
      <div class='conductor'>
        <div class="span6">
          <p><%= image_tag @conductor.avatar.url(:small) %></p>
          <p class="text-info">Nombre de la Empresa:</p>
          <p><%= @conductor.nombres %></p>
          <p class="text-info">Dirección:</p>
          <p><%= @conductor.direccion %></p>
          <p class="text-info">Ciudad:</p>
          <p><%= @conductor.municipio.nombre %></p>
        </div>
        <div class="span3">
          <%= image_tag('title1.png', :width => '300') %>
          <div class="row">
            <p class="text-info">Teléfonos:</p>
            <p><%= @conductor.telefonos %></p>
            <p class="text-info">Email:</p>
            <p><%= @conductor.email %></p>
            <p class="text-info">Observaciones:</p>
            <p><%= @conductor.observaciones %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>