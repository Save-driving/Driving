<html>
<head>
  <title>INGRESO</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <div class="user_nav">
      <% if current_user %>
        <p class="text-success">Sesión de: <%= current_user.username %>.
        <%= link_to "Salir", logout_path %></p>
      <% else %>
        <center><%= link_to "Regístrate, (si es tu primera vez)", signup_path %> or
        <%= link_to "Ingresa, (si ya estas registrado)", login_path %>.</center>
      <% end %>
    </div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>