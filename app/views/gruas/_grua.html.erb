<tr id=<%= "grua_#{grua.id}" %>>
  
  <td><%= grua.nombres %></td>
  <td><%= grua.direccion %></td>
  <td><%= grua.municipio.nombre %></td>
  <td><%= grua.telefonos %></td>
  <td><%= grua.email %></td>
  <td><%= grua.observaciones %></td>
  <td>
    <%= link_to image_tag('zoom.png'), grua, :remote => true, :title => "Mostrar" %>
    <%= link_to image_tag('editar.png'), edit_grua_path(grua), :title => "Editar", :remote => true %>
    <%= link_to image_tag('trash.png'), grua, :title => "Eliminar", 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true %>
  </td>
</tr>