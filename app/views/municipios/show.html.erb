<%- model_class = Municipio -%>
<div class="page-header">
	<%= image_tag('title2.png', :width => '300') %>
  <h2 class="text-error">MUNICIPIOS</h2>
</div>

<dl class="dl-horizontal" id="table">
  <dt><strong><%= image_tag @municipio.avatar.url(:small) %></strong></dt>
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @municipio.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departamento_nombre) %>:</strong></dt>
  <dd><%= @municipio.departamento_nombre %></dd>
</dl>

<div class="form-actions">
  <%= link_to image_tag('back2.png'), municipios_path, :title => "Atras"  %>
  <%= link_to image_tag('editar.png'), edit_municipio_path(@municipio), :title => "Editar" %>
  <%= link_to image_tag('trash.png'), municipio_path(@municipio), :rel => "tooltip", :title => "Eliminar", :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Esta usted seguro?')) } %>
</div>
