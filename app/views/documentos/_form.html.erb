<%= simple_form_for(@documento, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>

 <div class="responsive">

 	<div class="modal-body">
        <%= image_tag('title1.png', :width => '300') %>
        <div class='row' id='infor'>
		  <%= f.input :sigla, :label => "Sigla",  :required => true %>
		  <%= f.input :nombre, :label => "Nombre",  :required => true %>

		  <div class="form-actions">
		    <%= f.submit "guardar", :class => 'btn btn-primary' %>
		    <%= link_to 'Atras', documentos_path, :class => 'btn btn-small' %>
		  </div>
		</div>
	</div>
 </div>

<% end %>
