<%= simple_form_for(@pais, :html => { :class => 'form-horizontal', :multipart => true }, :remote => true) do |f| %>

  <%= f.error_notification %>

  <div class="responsive">

    <div class="modal-body">
          <%= image_tag('title1.png', :width => '300') %>
      <div class='row' id='infor'>

        <%= image_tag @pais.avatar.url(:small) %>
        <%= f.label :Foto %>
        <%= f.file_field :avatar %>
        <%= f.input :sigla, :label => "Sigla",  :required => true %>
        <%= f.input :nombre, :label => "Nombre",  :required => true %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "guardar", :class => 'btn btn-primary' %>
      <%= link_to 'Atras', paises_path, :class => 'btn btn-small' %>
    </div>
  </div>
<% end %>
